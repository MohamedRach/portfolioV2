---
import BaseLayout from "../layouts/BaseLayout.astro";
import HorizontalCard from "../components/HorizontalCard.astro";
import { getCollection } from "astro:content";

const posts = (await getCollection("blog")).sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());

const last_posts = posts.slice(0, 3);
---

<BaseLayout sideBarActiveItemID="home">
  <div class="pb-12 mt-5">
    <div class="text-xl py-1">Hey there ðŸ‘‹</div>
    <div class="text-5xl font-bold">I'm Mohamed Sadek Rachidi</div>
    <div class="text-3xl py-3 font-bold">Comp Sci Student and Passionate Developer</div>
    <div class="py-2">
      <text class="text-lg">
        Welcome to my portfolio! I'm a computer science student who loves building behind-the-scenes tech stuff! I'm all about learning, solving problems, and building strong, efficient stuff for the digital world. Thanks for checking out my work!
      </text>
    </div>
    <div class="mt-8">
      <a class="btn" href="https://twitter.com/RachidiSadek" target="_blank"> Let's connect!</a>
      <a href="/cv"class="btn btn-outline ml-5">
        Check My Resume
      </a>
    </div>
  </div>

  <div>
    <div class="text-3xl w-full font-bold mb-2">My last projects {"</>"}</div>
  </div>

  <HorizontalCard
    title="Auth & user Management API"
    img="/auth.png"
    desc="This project is an open source API that enable developers to organize user interactions for their applications, it ensures logins, user registration and user management."
    url="https://github.com/MohamedRach/NodeJS-auth-user-management"
  />
  <div class="divider my-0"></div>
  <HorizontalCard
    title="Rust Load Balancer"
    img="/rust.png"
    desc="a rust load balancer built from scratch."
    url="https://github.com/MohamedRach/rust_load_balancer"
  />
  <div class="divider my-0"></div>
  <HorizontalCard
    title="E-commerce microServices Back-end"
    img="/commerce.png"
    desc="This project is an e-commerce back-end built with a micro services architecture to manage authentification, products and orders."
    url="https://github.com/MohamedRach/e-commerce_microServices"
    badge="NEW"
  />

  <div>
    <div class="text-3xl w-full font-bold mb-5 mt-10">Latest from blog</div>
  </div>

  {
    last_posts.map((post) => (
      <>
        <HorizontalCard
          title={post.data.title}
          img={post.data.heroImage}
          desc={post.data.description}
          url={"/blog/" + post.slug}
          target="_self"
          badge={post.data.badge}
        />
        <div class="divider my-0" />
      </>
    ))
  }
</BaseLayout>
